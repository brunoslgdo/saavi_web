include ../config/conf_contact
include ../config/conf_regulations
mixin contact(arrContact, language)
    - let lang = language
    section.container.contact#contact
        article.wrap.contact__content
            .contact__child
                if lang == 'sp'
                    h1.title.text-alt Contacto
                if lang == 'en'
                    h1.title.text-alt Contact Us
            .contact__child
                if lang == 'sp'
                    h2.subtitle.text-alt Oficinas corporativas
                if lang == 'en'
                    h2.subtitle.text-alt Headquarters
            .contact__child
                ul.data
                    each item in arrContact
                        li.data__item
                            img(src=`${pathImg}${item.icon}`, class="data__icon")
                            span.small.text-alt= `${item.content}`
            iframe(src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d15049.390543816424!2d-99.202477!3d19.440573!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x8db8cf49bafefb54!2sSaavi%20Energ%C3%ADa!5e0!3m2!1ses!2smx!4v1597155607932!5m2!1ses!2smx" width="100%" height="" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0" class="contact__child")
            .contact__child.article.regulations
                if lang == 'sp'
                    p: a(href=`${pathGlobal}aviso-de-privacidad/`, class="small text-alt") Aviso de privacidad
                    p: a(href=`${pathGlobal}politica-de-cookies.html`, class="small text-alt") Política de cookies
                    p: a(href=`${pathGlobal}terminos-y-condiciones.html`, class="small text-alt") Términos y condiciones
                if lang == 'en'
                    p: a(href=`${pathGlobal}privacy-notice.html`, class="small text-alt") Privacy notice
                    p: a(href=`${pathGlobal}cookies-policy.html`, class="small text-alt") Cookies policy
                    p: a(href=`${pathGlobal}terms-and-conditions.html`, class="small text-alt") Terms and conditions