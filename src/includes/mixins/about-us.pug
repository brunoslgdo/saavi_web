include ../config/conf_about-us
mixin aboutUs(arrAboutUs, arrHistory, language)
    - let lang = language
    section.container.about-us#about-us
        article.wrap.about-us__content
            .about-us__child
                if lang == 'sp'
                    each item in arrAboutUs.sp
                        h1.title.first-alt !{`${item.title}`}
                        p.body.first: strong !{`${item.content}`}
                if lang == 'en'
                    each item in arrAboutUs.en
                        h1.title.first-alt !{`${item.title}`}
                        p.body.first: strong !{`${item.content}`}
            .about-us__child.about-us__history
                if lang == 'sp'
                    h1.title.text-alt !{`${arrHistory.titleSp}`}
                if lang == 'en'
                    h1.title.text-alt !{`${arrHistory.titleEn}`}
            ul.about-us__child.about-us__time-line
                if lang == 'sp'
                    each item in arrHistory.timeLine
                        li.bullet
                            h2.subtitle.first-alt !{`${item.year}`}
                            p.small.first !{`${item.hitoSp}`}
                if lang == 'en'
                    each item in arrHistory.timeLine
                        li.bullet
                            h2.subtitle.first-alt !{`${item.year}`}
                            p.small.first !{`${item.hitoEn}`}